{
    "compilerOptions": {
        "target": "ES2019",
        "module":"NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
          ]
    },
    "include": ["src/**/*" ],
    "exclude": ["node_modules", "dist"]
}